<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorWhite">

    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@color/colorBg"
        android:id="@+id/country_icon"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="language Title"
        android:textColor="@color/colorBlack"
        android:id="@+id/language_title"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/country_icon"
        app:layout_constraintStart_toEndOf="@+id/country_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actual Language"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="15dp"
        android:id="@+id/language_name_txt"
        app:layout_constraintBottom_toBottomOf="@+id/country_icon"
        app:layout_constraintTop_toBottomOf="@+id/language_title"
        app:layout_constraintStart_toEndOf="@+id/country_icon"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>