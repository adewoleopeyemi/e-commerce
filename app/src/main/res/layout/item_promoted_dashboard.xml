<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/Theme3_spacing_middle"
            android:layout_marginEnd="@dimen/Theme3_spacing_standard"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/card"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Theme3_spacing_standard_new">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/Theme3_spacing_control_half"
                    android:layout_marginEnd="@dimen/Theme3_spacing_control_half"
                    android:background="@drawable/theme3_item_shadow">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_55sdp"
                        android:layout_marginTop="@dimen/Theme3_spacing_standard_new"
                        android:layout_marginEnd="@dimen/Theme3_spacing_standard"
                        android:layout_marginBottom="@dimen/Theme3_spacing_standard_new"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title_restaurants"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Theme3_colorPrimary"
                            android:textSize="@dimen/Theme3_font_size_medium"
                            android:textStyle="bold"
                            android:textAppearance="@style/Theme3FontSemiBold"
                            tools:text="Delisious Italian Pizza"
                            android:fontFamily="@font/amaranth_bold"/>
                        <ImageView
                            android:id="@+id/ivVeg"
                            android:layout_below="@id/title_restaurants"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/Theme3_spacing_control"
                            android:padding="@dimen/Theme3_spacing_control_half"
                            android:src="@drawable/theme3_ic_veg"/>

                        <TextView
                            android:layout_toEndOf="@id/ivVeg"
                            android:layout_below="@id/title_restaurants"
                            android:id="@+id/salogon_restaurants"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Theme3_color_green"
                            android:maxLines="2"
                            android:textSize="@dimen/Theme3_font_size_small"
                            tools:text="Veg"
                            android:fontFamily="@font/verdana"/>

                        <RelativeLayout
                            android:layout_below="@id/salogon_restaurants"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp">
                            <RatingBar
                                android:id="@+id/ruleRatingBar"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:gravity="start"
                                android:progressTint="@color/colorRatingBar"
                                android:backgroundTint="@color/colorRatingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:theme="@style/RatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/distanse_restaurants"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/Theme3_font_size_medium"
                            android:textStyle="bold"
                            android:textAppearance="@style/Theme3FontSemiBold"
                            tools:text="0.00KM"
                            android:layout_marginTop="85dp"/>
                        <ImageView
                            android:layout_height="22dp"
                            android:layout_width="22dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="32dp"
                            android:layout_toStartOf="@+id/item_delivery_time_tv"
                            android:id="@+id/service_icon"
                            android:src="@drawable/service_fee_icon"
                            android:layout_below="@+id/salogon_restaurants"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/salogon_restaurants"
                            android:id="@+id/item_delivery_time_tv"
                            android:layout_alignParentEnd="true"
                            android:text="$30"
                            android:textSize="12sp"
                            android:textColor="@color/color_light_black"
                            android:layout_marginEnd="7dp"
                            />


                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="10dp"
                            android:id="@+id/baked_time_tv"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/service_icon"
                            android:layout_marginEnd="7dp"
                            android:text="$30"
                            android:textSize="12sp"
                            android:textColor="@color/color_light_black"
                            />

                        <ImageView
                            android:layout_height="22dp"
                            android:layout_width="22dp"
                            android:layout_marginEnd="7dp"
                            android:layout_toStartOf="@+id/baked_time_tv"
                            android:id="@+id/baked_icon"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/service_icon"
                            android:src="@drawable/baking"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_anchor="@id/card"
                app:layout_anchorGravity="center|start"
                android:layout_gravity="center"
                android:background="@null"
                app:cardCornerRadius="45dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image_restaurant"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:placeholderImage="@color/gray"
                    app:roundAsCircle="true"
                    android:background="@null"/>
            </androidx.cardview.widget.CardView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>