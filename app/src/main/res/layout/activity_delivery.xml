<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="100dp"
            android:visibility="gone"
            android:id="@+id/login_container"/>
        <LinearLayout
            android:id="@+id/splashScreenRelLayout"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/tb_ic_splash"
                    android:foreground="#AE000000"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logopng"
                    android:background="@null"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user_frag_main_container"
            android:layout_marginTop="25dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/address_list_container"
                android:elevation="20dp"
                android:visibility="gone"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activitiesAndFragments.DeliveryActivity">
                <androidx.drawerlayout.widget.DrawerLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/drawerLayout"
                    tools:openDrawer="start"
                    android:fitsSystemWindows="true"
                    android:visibility="gone">
                    <include
                        android:id="@+id/home_content"
                        layout="@layout/tb_content_layout_home"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"/>
                </androidx.drawerlayout.widget.DrawerLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tb_white"
                    android:id="@+id/payment_layout"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="gone">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:elevation="@dimen/_8sdp">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@mipmap/ic_launcher"
                                    android:background="@null"/>
                            </androidx.cardview.widget.CardView>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/gray"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_16sdp">
                                <EditText
                                    android:id="@+id/instructions"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:maxLines="1"
                                    android:hint="@string/please_enter_instructions_upon_delivery"
                                    android:textColorHint="@color/gray"
                                    android:layout_marginEnd="10dp"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_16sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/pickup"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                    android:fontFamily="@font/abril_fatface"/>
                                <TextView
                                    android:id="@+id/Pickup"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Delivery"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                    android:fontFamily="@font/abril_fatface"/>
                                <TextView
                                    android:id="@+id/delivery"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Distance"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                    android:fontFamily="@font/abril_fatface"/>
                                <TextView
                                    android:id="@+id/distance"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Price Per Km"
                                    android:fontFamily="@font/abril_fatface"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"/>
                                <TextView
                                    android:id="@+id/priceKm"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SubTotal"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                                <TextView
                                    android:id="@+id/subTotal"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tax"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                    android:fontFamily="@font/abril_fatface"/>
                                <TextView
                                    android:id="@+id/tax"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Currency"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                    android:fontFamily="@font/abril_fatface"/>
                                <TextView
                                    android:id="@+id/currency"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                    android:fontFamily="@font/abril_fatface"/>
                                <TextView
                                    android:id="@+id/total"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/_10sdp">
                                <TextView
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Symbol"
                                    android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                    android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                    android:fontFamily="@font/abril_fatface"/>
                                <TextView
                                    android:id="@+id/symbol"
                                    style="@style/TBSmallHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:text="@string/accepted_orders"
                                    android:maxLines="1"
                                    android:fontFamily="@font/abril_fatface"
                                    />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/gray"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"/>

                            <TextView
                                style="@style/TBSmallHeading"
                                android:layout_marginStart="@dimen/tb_spacing_standard_new"
                                android:layout_marginEnd="@dimen/tb_spacing_standard_new"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:text="Add Payment Method" />

                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_16sdp">

                                <RadioButton
                                    android:id="@+id/cash_on_delivery"
                                    android:layout_width="200dp"
                                    android:layout_height="20dp"
                                    android:checked="true"
                                    android:text="@string/cash_on_delivery"/>

                                <RadioButton
                                    android:id="@+id/card_on_delivery"
                                    android:layout_width="200dp"
                                    android:layout_height="20dp"
                                    android:checked="false"
                                    android:layout_marginTop="@dimen/_16sdp"
                                    android:text="@string/card_on_delivery"/>

                                <RadioButton
                                    android:id="@+id/card_stripe"
                                    android:layout_width="200dp"
                                    android:layout_height="20dp"
                                    android:checked="false"
                                    android:layout_marginTop="@dimen/_16sdp"
                                    android:text="@string/card_stripe"/>
                                <RadioButton
                                    android:id="@+id/flutterwave"
                                    android:layout_width="200dp"
                                    android:layout_height="20dp"
                                    android:checked="false"
                                    android:layout_marginTop="@dimen/_16sdp"
                                    android:text="@string/african_card_flutterwave"/>
                            </RadioGroup>

                            <TextView
                                android:id="@+id/confirm_payment"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@color/colorPrimary"
                                android:layout_marginTop="@dimen/tb_spacing_standard_new"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="CONTINUE"
                                android:fontFamily="@font/abril_fatface"
                                android:textColor="@color/colorWhite"
                                android:textSize="16sp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:padding="8dp"/>
                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>