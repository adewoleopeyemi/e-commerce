<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/Theme4_spacing_middle"
        android:paddingBottom="@dimen/Theme4_spacing_middle"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/theme4_ic_left"
            android:layout_centerVertical="true"
            android:padding="@dimen/Theme4_spacing_standard"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme4_lbl_calories"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/Theme4FontBold"
            android:textSize="@dimen/Theme4_font_size_normal"/>
    </RelativeLayout>

</RelativeLayout>