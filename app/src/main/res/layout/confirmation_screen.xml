<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/confirmation_main_screen"
        android:background="@color/colorWhite">

    <RelativeLayout
         android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="@dimen/toolbar_height">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="50dp"
            android:layout_marginStart="@dimen/toolbar_margin_left"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/back_icon"
            android:id="@+id/back_icon_confirm"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textSize="15sp"
            android:id="@+id/confirmation_title"
            android:layout_centerInParent="true"
            android:textColor="@color/bg_top_color"
            android:gravity="center_horizontal|center_vertical" />

    </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="center">



                     <ImageView
                         android:layout_gravity="bottom"
                         android:layout_height="match_parent"
                         android:layout_width="@dimen/_80sdp"
                         android:src="@drawable/sms"
                         android:layout_alignParentBottom="true"
                         android:layout_centerHorizontal="true"

                         />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="25dp"
                        android:paddingEnd="25dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/sms_desc"
                            android:layout_marginTop="10dp"
                            android:id="@+id/sms_tv"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/enter_code"
                            android:textColor="@color/colorBlack"
                            android:layout_marginTop="10dp"
                            android:layout_below="@+id/sms_tv"
                            android:layout_centerHorizontal="true"


                            />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:weightSum="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:weightSum="4"
                    android:paddingStart="60dp"
                    android:paddingEnd="60dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.02"
                        android:textSize="45dp"
                        android:maxLength="1"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:paddingStart="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/color_light_black"
                        android:background="@drawable/edit_text_bg"
                        android:id="@+id/edit_text1"/>
                        <requestFocus />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:id="@+id/edit_text2"
                        android:textSize="45dp"
                        android:maxLength="1"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:paddingStart="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/color_light_black"
                        android:background="@drawable/edit_text_bg"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:id="@+id/edit_text3"
                        android:textSize="45dp"
                        android:maxLength="1"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:paddingStart="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/color_light_black"
                        android:background="@drawable/edit_text_bg"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:id="@+id/edit_text4"
                        android:maxLength="1"
                        android:imeOptions="actionDone"
                        android:textSize="45dp"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:paddingStart="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/color_light_black"
                        android:background="@drawable/edit_text_bg"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <at.markushi.ui.CircleButton
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/arrow"
                            android:background="@null"
                            android:padding="30dp"
                            android:layout_marginTop="8dp"
                            app:cb_color="@color/colorRed"
                            android:id="@+id/confirm_btn"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/confirm_btn"
                            android:id="@+id/resend_btn"
                            android:layout_marginTop="8dp"
                            android:text="@string/resend_code"
                            android:textColor="@color/colorRed"
                            android:textSize="14sp"/>


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>