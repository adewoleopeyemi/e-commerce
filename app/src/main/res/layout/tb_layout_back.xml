<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llHead"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/tb_spacing_middle"
        android:paddingBottom="@dimen/tb_spacing_standard_new"
        >

        <ImageView
            android:id="@+id/ivBack"
            style="@style/TBBackIcon"
            android:layout_marginBottom="@dimen/tb_spacing_standard"
            android:layout_marginStart="@dimen/tb_spacing_middle"/>

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TBHeading"
            android:gravity="center"
            android:layout_marginStart="@dimen/tb_spacing_standard_new"
            tools:text="Notification" />

    </LinearLayout>


</RelativeLayout>

