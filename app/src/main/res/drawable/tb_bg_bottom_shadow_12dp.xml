<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding

                android:bottom="2dp" />

            <solid android:color="#00C0C0C0" />

            <corners android:bottomLeftRadius="@dimen/_16sdp"
                android:bottomRightRadius="@dimen/_16sdp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding

                android:bottom="2dp" />

            <solid android:color="#05C0C0C0" />
            <corners android:bottomLeftRadius="@dimen/_16sdp"
                android:bottomRightRadius="@dimen/_16sdp" />

        </shape>
    </item>
    <item>
        <shape>
            <padding

                android:bottom="2dp" />
            <solid android:color="#0aC0C0C0" />
            <corners android:bottomLeftRadius="@dimen/_16sdp"
                android:bottomRightRadius="@dimen/_16sdp" />

        </shape>
    </item>
    <item>
        <shape>
            <padding

                android:bottom="2dp" />

            <solid android:color="#0fC0C0C0" />

            <corners android:bottomLeftRadius="@dimen/_16sdp"
                android:bottomRightRadius="@dimen/_16sdp" />

        </shape>
    </item>
    <item>
        <shape>
            <padding

                android:bottom="2dp" />

            <solid android:color="#14C0C0C0" />
            <corners android:bottomLeftRadius="@dimen/_16sdp"
                android:bottomRightRadius="@dimen/_16sdp" />

        </shape>
    </item>

    <!-- Background -->
    <item
        android:id="@+id/itemShape">
        <shape>
            <solid android:color="@color/tb_white" />
            <corners android:bottomLeftRadius="@dimen/_16sdp"
                android:bottomRightRadius="@dimen/_16sdp"/>


        </shape>
    </item>

</layer-list>