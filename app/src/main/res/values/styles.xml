<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="searchViewStyle">@style/SearchViewMy</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorBlack</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/transparent</item>
        <item name="queryBackground">@color/transparent</item>
        <item name="android:textSize">4sp</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
        <item name="android:editTextColor">@color/colorBlack</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorEditTextBG</item>
        <item name="colorControlActivated">@color/colorRatingBar</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">@dimen/_3sdp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="elevationOverlayColor">@color/colorBlack</item>
    </style>


    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/colorWhite</item>
    </style>

    <style name="MySeekBar2" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/colorBlack</item>
    </style>



    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextAlt" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutList" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
         <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorDeal</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>


        <style name="Theme3AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/Theme3_colorPrimary</item>
        <item name="colorPrimaryDark">@color/Theme3_colorPrimaryDark</item>
        <item name="colorAccent">@color/Theme3_colorAccent</item>
    </style>

    <style name="Theme3FontSemiBold">
        <item name="font">@string/theme3_font_semi_bold</item>
    </style>
    <style name="Theme3FontMedium">
        <item name="font">@string/theme3_font_medium</item>
    </style>
    <style name="Theme3FontBold">
        <item name="font">@string/theme3_font_bold</item>
    </style>
    <style name="Theme3EditTextStyle_rounded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/_25sdp</item>
        <item name="android:paddingEnd">@dimen/Theme3_spacing_control</item>
        <item name="android:paddingTop">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/_14sdp</item>
        <item name="android:textColor">@color/Theme3_textColorPrimary</item>
        <item name="android:textSize">@dimen/Theme3_font_size_medium</item>
        <item name="android:background">@drawable/theme3_bg_edittext</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginStart">@dimen/Theme3_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/Theme3_spacing_standard_new</item>
    </style>
    <style name="Theme3MaterialButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/Theme3_spacing_standard</item>
        <item name="android:paddingEnd">@dimen/Theme3_spacing_standard</item>
        <item name="android:textColor">@color/Theme3_white</item>
        <item name="android:textSize">@dimen/Theme3_font_size_medium</item>
        <item name="android:layout_marginStart">@dimen/Theme3_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/Theme3_spacing_standard_new</item>
        <item name="android:background">@drawable/theme3_bg_button</item>
        <item name="android:textAppearance">@style/Theme3FontSemiBold</item>

    </style>

    <style name="Theme3CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/Theme3_font_size_medium</item>
    </style>

    <style name="Theme3RatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/Theme3_icon_color</item>
        <item name="colorControlActivated">@color/Theme3_colorPrimaryDark</item>
    </style>
    <style name="Theme3SwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:colorControlActivated">@color/Theme3_colorPrimaryDark</item>
    </style>

    <style name="Theme3SettingLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/Theme3_spacing_middle</item>
        <item name="android:paddingBottom">@dimen/Theme3_spacing_middle</item>
        <item name="android:paddingStart">@dimen/Theme3_spacing_standard_new</item>
        <item name="android:paddingEnd">@dimen/Theme3_spacing_standard_new</item>
    </style>
    <style name="Theme3SettingHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Theme3_textColorPrimary</item>
        <item name="android:textSize">@dimen/Theme3_font_size_normal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="font">@string/theme3_font_medium</item>
    </style>

    <style name="Theme3AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/Theme3_textColorPrimary</item>
        <item name="android:textColorSecondary">@color/Theme3_textColorSecondary</item>
        <item name="android:textColorHint">@color/Theme3_textColorSecondary
        </item>
    </style>
    <style name="Theme4FontBold">
        <item name="fontPath">@string/theme4_font_bold</item>
    </style>

    <style name="Theme4FontMedium">
        <item name="fontPath">@string/theme4_font_medium</item>
    </style>

    <style name="Theme4SubHeading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/Theme4_textColorPrimary</item>
        <item name="android:textSize">@dimen/Theme4_font_size_medium</item>
    </style>

    <style name="TBAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tb_colorPrimary</item>
        <item name="colorPrimaryDark">@color/tb_colorPrimaryDark</item>
        <item name="colorAccent">@color/tb_colorAccent</item>
        <item name="colorControlNormal">@color/tb_view_color</item>
    </style>

    <style name="TBAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tb_colorPrimary</item>
        <item name="colorPrimaryDark">@color/tb_colorPrimaryDark</item>
        <item name="colorAccent">@color/tb_colorAccent</item>
    </style>

    <style name="TBAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TBAppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="TBAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TBFontMedium">
        <item name="fontPath">@string/tb_font_medium</item>
    </style>

    <style name="TBFontSemiBold">
        <item name="fontPath">@string/tb_font_semi_bold</item>
    </style>

    <style name="TBFontBold">
        <item name="fontPath">@string/tb_font_bold</item>
    </style>

    <style name="TBMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/tb_font_size_medium</item>
        <item name="android:paddingTop">@dimen/tb_spacing_standard</item>
        <item name="android:paddingBottom">@dimen/tb_spacing_standard</item>
        <item name="android:paddingStart">@dimen/tb_spacing_xlarge</item>
        <item name="android:paddingEnd">@dimen/tb_spacing_xlarge</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="fontPath">@string/tb_font_medium</item>
    </style>

    <style name="TBMaterialButtonStyle.Filled">
        <item name="backgroundTint">@color/tb_colorPrimary</item>
        <item name="android:textColor">@color/tb_white</item>
    </style>

    <style name="TBMaterialButtonStyle.Stroked">
        <item name="backgroundTint">@color/tb_matt_black</item>
        <item name="android:textColor">@color/tb_white</item>
    </style>

    <style name="TBEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/tb_spacing_standard_new</item>
        <item name="android:paddingEnd">@dimen/tb_spacing_control</item>
        <item name="android:paddingTop">@dimen/tb_spacing_middle</item>
        <item name="android:paddingBottom">@dimen/tb_spacing_middle</item>
        <item name="android:textColor">@color/tb_textColorPrimary</item>
        <item name="android:textSize">@dimen/tb_font_size_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginStart">@dimen/tb_spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/tb_spacing_standard_new</item>
    </style>



    <style name="TBRecycleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="TBFormStartDrawable">
        <item name="android:layout_width">@dimen/_18sdp</item>
        <item name="android:layout_height">@dimen/_18sdp</item>
        <item name="android:tint">@color/tb_textColorPrimary</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
    </style>

    <style name="TBDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/tb_view_color</item>
    </style>

    <style name="TBTextInputStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/tb_textColorSecondary</item>
    </style>

    <style name="TBInputEditText">
        <item name="android:textSize">@dimen/tb_font_size_normal</item>
        <item name="android:textColor">@color/tb_textColorSecondaryLight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/tb_spacing_middle</item>
        <item name="android:paddingBottom">@dimen/tb_spacing_standard_new</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TBOTPEditText">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxEms">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/tb_bg_rating</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/tb_colorPrimary</item>
        <item name="android:textSize">@dimen/tb_font_size_xlarge</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:layout_margin">@dimen/tb_spacing_standard</item>
    </style>

    <style name="TBDrawerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tb_font_size_medium</item>
        <item name="android:layout_marginEnd">@dimen/_1sdp</item>
        <item name="android:drawablePadding">@dimen/tb_spacing_standard_new</item>
        <item name="android:paddingStart">@dimen/tb_spacing_standard_new</item>
        <item name="android:paddingEnd">@dimen/tb_spacing_standard_new</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="fontPath">@string/tb_font_medium</item>
        <item name="android:textColor">@color/tb_white</item>
        <item name="android:drawableTint">@color/tb_white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TBBackIcon">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/tb_spacing_middle</item>
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:src">@drawable/tb_ic_back</item>
        <item name="android:tint">@color/tb_textColorPrimary</item>
    </style>

    <style name="TBHeading">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tb_font_size_xxlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tb_textColorPrimary</item>
        <item name="fontPath">@string/tb_font_bold</item>

    </style>

    <style name="TBRatingBar" parent="Theme.MaterialComponents">
        <item name="colorControlNormal">@color/tb_view_color</item>
        <item name="colorControlActivated">#FBC02D</item>
    </style>

    <style name="TBSmallHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tb_font_size_small</item>
        <item name="android:textColor">@color/tb_textColorSecondary</item>
    </style>


    <style name="TBAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
